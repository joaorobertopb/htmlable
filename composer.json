{
    "name": "joaorobertopb/htmlable",
    "type": "library",
    "description": "Simple PHP library for abstraction and rendering of html elements.",
    "keywords": [
        "joaorobertopb",
        "htmlable",
        "html"
    ],
    "homepage": "https://github.com/joaorobertopb/htmlable",
    "license": "MIT",
    "authors": [
        {
            "name": "JoÃ£o Roberto",
            "email": "joaorobertopb@gmail.com",
            "homepage": "https://github.com/joaorobertopb",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "JoaoRobertoPB\\Htmlable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JoaoRobertoPB\\Htmlable\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
